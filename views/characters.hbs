<h2 class="personajesH2">PERSONAJES</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">

    {{#each charactersInfo}}
    <div class="col">
        <img src={{this.image}} class="card-img-top" alt="{{this.name}}onerror="this.src="../images/default.jpeg">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#{{this.id}}">
                More info
            </button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade black" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img src={{this.image}} alt="{{this.name}}">
                    <a href="{{this.wiki}}" target="_blank">More info</a>
                    <p>Born in <span class="planet">{{this.homeworld}}</span></p>
                

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
                    <form method="POST" action="/characters/create/{{this.id}}">
                        <button type="submit" class="btn btn-primary">Save to Favorites</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
    {{/each}}

</div>